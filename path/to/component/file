import React, { useState } from 'react';

function CommitMessageComponent({ commitMessage }) {
  // Check if commitMessage is an object with a nested commit_message property
  const message = typeof commitMessage === 'object' && commitMessage.commit_message
    ? commitMessage.commit_message.commit_message  // Access the nested commit_message
    : commitMessage;  // Use the commitMessage as is if it's not nested

  return (
    <div>
      <h3>Generated Commit Message:</h3>
      <pre>{message}</pre>
    </div>
  );
}

function YourParentComponent() {
  const [commitMessage, setCommitMessage] = useState(null);

  // ... existing code to fetch commit message ...

  return (
    <div>
      {/* ... other components ... */}
      {commitMessage && <CommitMessageComponent commitMessage={commitMessage} />}
    </div>
  );
}

